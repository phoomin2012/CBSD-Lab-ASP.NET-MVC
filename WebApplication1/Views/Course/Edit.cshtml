@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseId" />
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDescription" class="control-label"></label>
                <textarea asp-for="CourseDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseCredit" class="control-label"></label>
                <input asp-for="CourseCredit" class="form-control" />
                <span asp-validation-for="CourseCredit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseLecturer" class="control-label"></label>
                <input asp-for="CourseLecturer" class="form-control" />
                <span asp-validation-for="CourseLecturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseGradeType" class="control-label"></label>
                <select asp-for="CourseGradeType" class="form-control">
                    <option>A-F</option>
                    <option>S/U</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index" class="btn btn-outline-success"><< Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
